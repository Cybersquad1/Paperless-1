md-content.login-signup-box(
  layout="column", 
  layout-align="center center", 
  layout-md="column",
  layout-sm="column",
  layout-xs="column", 
  flex="100",
  class="animated fadeInUp")

  span.text-center.header
    i.fa.fa-file.fa-2x.white-color &nbsp;
      span.form-header-text Paperless

  md-content.login-signup-body(
    layout="column", 
    layout-padding, 
    flex=60)

    form(
      method="post", 
      ng-submit="login()", 
      name="loginForm")

      md-input-container.md-block
        md-icon
          i.fa.fa-user
        input(
          ng-model="user.email", 
          name="email", type="email", 
          ng-required="true", 
          placeholder="Email", 
          aria-label="user.login")

      md-input-container.md-block
        md-icon
          i.fa.fa-key
        input(
          ng-model="user.password", 
          name="password", 
          type="password", 
          ng-required="true", 
          placeholder="Password", 
          aria-label="user.password")

      br

      md-button.md-raised.login-signup-button(
        type="submit", 
        ng-disabled="!loginForm.$valid")
        i.fa.fa-sign-in
        span.login-signup-text &nbsp; LOGIN

      .social-auth-line
        span.line
        span.text-center
          span.social-auth-desc or connect with
        span.line

    md-content.social-auth-buttons(
      layout="row", 
      layout-align="center center",
      layout-sm="column")

      md-button.md-raised.facebook-button(ng-click="fbLogin()")
        i.fa.fa-facebook

      md-button.md-raised.google-button(ng-click="googleLogin()")
        i.fa.fa-google-plus

  span.form-footer-text.text-center Don"t have an account?
    a(ui-sref="welcome.signup") &nbsp;&nbsp;
      span.emphasize SIGNUP

  .error-messages.small-text.white-color.text-center
    p.animated.zoomIn(ng-show="loginForm.email.$error.required && loginForm.email.$dirty") Email is required
    p.animated.zoomIn(ng-show="!loginForm.email.$error.required && loginForm.email.$error.email && loginForm.email.$dirty") Invalid email
    p.animated.zoomIn(ng-show="loginForm.password.$error.required && loginForm.password.$dirty") Password is required
